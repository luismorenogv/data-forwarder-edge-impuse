/ {
    aliases {
        imu = &mpu9250;
    };
};

&i2c0 {
    status = "okay";

    mpu9250: mpu9250@68 {
        compatible = "invensense,mpu9250";
        reg = <0x68>;
        status = "okay";

        /* Required by the Zephyr binding (see docs) */
        gyro-sr-div = <19>;      /* 1000/(1+19) â‰ˆ 50 Hz */
        gyro-dlpf   = <41>;      /* legal values per binding */
        gyro-fs     = <500>;     /* dps */
        accel-fs    = <4>;       /* g */
        accel-dlpf  = "44.8";    /* string as per binding */

        /* Thingy:52 MPU_INT is on P0.06 */
        irq-gpios = <&gpio0 6 GPIO_ACTIVE_HIGH>;
    };
};
